<div class="container">
<h1> <%= @task.title %> </h1>
<div class="task-details">
  <p> <%= @task.details %> </p>
  <p><%= @task.completed ? '✔ Completed!' : '✖ This task is not completed yet!' %> </p>
  <p> <%= link_to 'Edit this task', edit_task_path %> </p>
</div>
<%= link_to 'Back to list', tasks_path %>
</div>
